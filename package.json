{
  "name": "csterk-dev-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn theme && next build",
    "build:dry": "tsc --noEmit",
    "start": "next start",
    "lint": "eslint --fix .",
    "theme": "chakra typegen src/theme/config.ts",
    "theme:strict": "chakra typegen src/theme/config.ts --strict",
    "theme:watch": "chakra typegen src/theme/config.ts --watch",
    "chakra:add": "chakra snippet add $npm_config_component --outdir ./src/components/atoms",
    "chakra:add-all": "chakra snippet add --all --outdir ./src/components/atoms"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.0.0",
    "@emotion/react": "^11.14.0",
    "axios": "^1.2.0",
    "dayjs": "^1.11.10",
    "next": "~15.4",
    "contentlayer": "^0.3.4",
    "next-contentlayer": "^0.3.4",
    "next-seo": "^6.8.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.24.0",
    "@types/node": "^24.0.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@usesoftwareau/eslint-config-react": "^1.0.3",
    "eslint": "^8.51.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "typescript": "^5.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
